@using MassageStudio.App.Models;
@model IEnumerable<Term>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista wolnych terminow</h1>
@if (Model.Count() != 0)
{
    <ul class="list-group">
        @foreach (var Term in Model)
        {
            if (Term.Reserved == false)
            {
                <li class="list-group-item-light">@Term.Date <a class="btn alert-primary" href="@Url.Action("Details", "User", new {id = @Term.Id})">Wybierz</a></li>
            }
        }
    </ul>
}
else
{
    <h2>Brak wolnych terminów</h2>
}
